generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  apiKeys       ApiKey[]
  data          Data[]
  sessions      Session[]
}

model Data {
  id         String    @id @default(cuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  content    String
  type       String
  userId     String
  projectId  String?
  embedding  Float[]
  metadata   Json?
  version    Int       @default(1)
  isArchived Boolean   @default(false)
  tags       String[]  @default([])
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjects   Subject[] @relation("DataToSubject")

  @@index([type])
  @@index([userId])
  @@index([projectId])
}

model Subject {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  data        Data[]   @relation("DataToSubject")
}

model SourceConfig {
  id           String    @id @default(cuid())
  userId       String
  source       String
  apiKey       String?
  apiSecret    String?
  webhookUrl   String?
  isEnabled    Boolean   @default(true)
  lastSync     DateTime?
  syncInterval Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([userId, source])
  @@index([userId])
  @@index([source])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  user               User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         Int      @id @default(autoincrement())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ApiKey {
  id        String    @id @default(cuid())
  key       String    @unique
  userId    String
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  isEnabled Boolean   @default(true)
  lastUsed  DateTime?
  name      String?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum Role {
  USER
  ADMIN
}
