{
    "openapi": "3.1.0",
    "info": {
        "title": "OpenSkills AI Coach API",
        "description": "API for managing user skills and progress in the OpenSkills application.",
        "version": "v1.0.0",
        "license": {
            "name": "MIT"
        }
    },
    "servers": [
        {
            "url": "https://openskills.online/api"
        }
    ],
    "components": {
        "schemas": {
            "Skill": {
                "type": "object",
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the skill."
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the skill."
                    },
                    "description": {
                        "type": "string",
                        "description": "Optional description of the skill."
                    },
                    "category": {
                        "type": "string",
                        "description": "Category of the skill."
                    },
                    "labels": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Labels associated with the skill."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the skill was created."
                    }
                }
            },
            "Progress": {
                "type": "object",
                "required": [
                    "id",
                    "skillId",
                    "currentProgress",
                    "userId"
                ],
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique identifier for the progress entry."
                    },
                    "skillId": {
                        "type": "string",
                        "description": "Unique identifier for the skill."
                    },
                    "currentProgress": {
                        "type": "integer",
                        "minimum": 0,
                        "maximum": 100,
                        "description": "Progress percentage (0-100)."
                    },
                    "userId": {
                        "type": "string",
                        "description": "Unique identifier for the user."
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the progress was created."
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time",
                        "description": "Timestamp when the progress was last updated."
                    }
                }
            },
            "Error": {
                "type": "object",
                "required": [
                    "code",
                    "message"
                ],
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32",
                        "description": "Error code."
                    },
                    "message": {
                        "type": "string",
                        "description": "Error message."
                    }
                }
            }
        }
    },
    "paths": {
        "/progress": {
            "get": {
                "summary": "Get user's progress",
                "operationId": "getUserProgress",
                "tags": [
                    "progress"
                ],
                "parameters": [
                    {
                        "name": "userId",
                        "in": "query",
                        "description": "The ID of the user to retrieve progress for",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of user's progress entries",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Progress"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create user progress",
                "operationId": "createUserProgress",
                "tags": [
                    "progress"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "skillId",
                                    "currentProgress",
                                    "userId"
                                ],
                                "properties": {
                                    "skillId": {
                                        "type": "string"
                                    },
                                    "currentProgress": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 100
                                    },
                                    "userId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Progress created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Progress"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Update user progress",
                "operationId": "updateUserProgress",
                "tags": [
                    "progress"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "id",
                                    "currentProgress"
                                ],
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    },
                                    "currentProgress": {
                                        "type": "integer",
                                        "minimum": 0,
                                        "maximum": 100
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Progress updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Progress"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Delete user progress",
                "operationId": "deleteUserProgress",
                "tags": [
                    "progress"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "progressId"
                                ],
                                "properties": {
                                    "progressId": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "204": {
                        "description": "Progress entry deleted successfully"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            }
        },
        "/skills": {
            "get": {
                "summary": "Get all skills",
                "operationId": "getAllSkills",
                "tags": [
                    "skills"
                ],
                "responses": {
                    "200": {
                        "description": "A list of all available skills",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Skill"
                                    }
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new skill",
                "operationId": "createSkill",
                "tags": [
                    "skills"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "name",
                                    "description",
                                    "category",
                                    "labels"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "category": {
                                        "type": "string"
                                    },
                                    "labels": {
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Skill created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Skill"
                                }
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "content": {
                            "application/json": {
                                "$ref": "#/components/schemas/Error"
                            }
                        }
                    }
                }
            }
        }
    }
}