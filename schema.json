{
    "openapi": "3.1.0",
    "info": {
      "title": "OpenSkills API",
      "version": "1.0.0",
      "description": "API for managing user skills and progress."
    },
    "servers": [
      {
        "url": "https://openskills.online/api",
        "description": "Production server"
      }
    ],
    "paths": {
      "/progress": {
        "get": {
          "summary": "Retrieve progress entries for a specific user",
          "description": "Fetches all progress entries associated with a given user ID.",
          "operationId": "getUserProgress",
          "parameters": [
            {
              "name": "userId",
              "in": "query",
              "description": "The unique identifier of the user",
              "required": true,
              "schema": {
                "type": "string",
                "example": "cm1p1p3qd0000k46jwkdhb2t5"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "A list of progress entries for the user",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/ProgressEntry"
                    },
                    "example": [
                      {
                        "id": "cm1p135ic0001cn3rqg9eihhj",
                        "skillId": "cm1owzibl00027muqy53gn8bi",
                        "userId": "cm1p1p3qd0000k46jwkdhb2t5",
                        "currentProgress": 0,
                        "createdAt": "2024-09-30T13:11:13.571Z",
                        "updatedAt": "2024-09-30T13:11:13.571Z",
                        "skill": {
                          "id": "cm1owzibl00027muqy53gn8bi",
                          "name": "Mobile Development",
                          "description": "Develop mobile applications.",
                          "category": null,
                          "labels": ["Technical", "Hard"],
                          "createdAt": "2024-09-30T11:16:25.090Z"
                        }
                      }
                    ]
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request - Invalid or missing parameters",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                  },
                  "example": {
                    "error": "userId query parameter is required."
                  }
                }
              }
            },
            "404": {
              "description": "Not Found - No progress entries found for the user",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                  },
                  "example": {
                    "error": "No progress entries found for the provided userId."
                  }
                }
              }
            },
            "500": {
              "description": "Internal Server Error",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                  },
                  "example": {
                    "error": "Failed to fetch progress entries."
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "ProgressEntry": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "example": "cm1p135ic0001cn3rqg9eihhj"
            },
            "skillId": {
              "type": "string",
              "example": "cm1owzibl00027muqy53gn8bi"
            },
            "userId": {
              "type": "string",
              "example": "cm1p1p3qd0000k46jwkdhb2t5"
            },
            "currentProgress": {
              "type": "integer",
              "example": 0
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-09-30T13:11:13.571Z"
            },
            "updatedAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-09-30T13:11:13.571Z"
            },
            "skill": {
              "$ref": "#/components/schemas/Skill"
            }
          },
          "required": [
            "id",
            "skillId",
            "userId",
            "currentProgress",
            "createdAt",
            "updatedAt",
            "skill"
          ]
        },
        "Skill": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "example": "cm1owzibl00027muqy53gn8bi"
            },
            "name": {
              "type": "string",
              "example": "Mobile Development"
            },
            "description": {
              "type": ["string", "null"],
              "example": "Develop mobile applications."
            },
            "category": {
              "type": ["string", "null"],
              "example": null
            },
            "labels": {
              "type": "array",
              "items": {
                "type": "string",
                "example": "Technical"
              },
              "example": ["Technical", "Hard"]
            },
            "createdAt": {
              "type": "string",
              "format": "date-time",
              "example": "2024-09-30T11:16:25.090Z"
            }
          },
          "required": [
            "id",
            "name",
            "labels",
            "createdAt"
          ]
        },
        "ErrorResponse": {
          "type": "object",
          "properties": {
            "error": {
              "type": "string",
              "example": "Error message describing what went wrong."
            }
          },
          "required": ["error"]
        }
      }
    }
  }
  